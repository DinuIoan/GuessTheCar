<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dinuioan.guessthecar.Level1Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"/>
    <Toolbar
        android:id="@+id/lvl_toolbar_lvl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4682B4">
        <ImageButton
            android:id="@+id/imBtn_back_lvl_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_chevron_left"
            android:onClick="back"
            />
        <TextView
            android:nextFocusLeft="@id/imBtn_back_lvl_1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="Back"
            android:textSize="30sp"
            />
    </Toolbar>
<ScrollView
    android:layout_below="@id/lvl_toolbar_lvl_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_below="@+id/lvl_toolbar_lvl_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:id="@+id/lvl_1_1"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:src="@drawable/a1"
            android:background="@drawable/btn_image_button"
             />
        <ImageButton
            android:layout_toRightOf="@id/lvl_1_1"
            android:id="@+id/lvl_1_2"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a2"
            android:background="@drawable/btn_image_button"
            />
        <ImageButton
            android:layout_toRightOf="@id/lvl_1_2"
            android:id="@+id/lvl_1_3"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a3"
            android:background="@drawable/btn_image_button"
            />
        <ImageButton
            android:layout_toRightOf="@id/lvl_1_3"
            android:id="@+id/lvl_1_4"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_image_button"
            android:src="@drawable/a4"
            />
        <ImageButton
            android:layout_below="@id/lvl_1_1"
            android:id="@+id/lvl_1_5"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a5"
            android:background="@drawable/btn_image_button"
            />
        <ImageButton
            android:layout_below="@id/lvl_1_2"
            android:layout_toRightOf="@id/lvl_1_5"
            android:id="@+id/lvl_1_6"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a6"
            android:background="@drawable/btn_image_button"
            />
        <ImageView
            android:layout_below="@id/lvl_1_3"
            android:layout_toRightOf="@id/lvl_1_6"
            android:id="@+id/lvl_1_7"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:background="@drawable/btn_image_button"
            android:src="@drawable/a7"
            />
        <ImageButton
            android:layout_below="@id/lvl_1_4"
            android:layout_toRightOf="@id/lvl_1_7"
            android:id="@+id/lvl_1_8"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a8"
            android:background="@drawable/btn_image_button"
            />
        <ImageButton
            android:layout_below="@id/lvl_1_5"
            android:id="@+id/lvl_1_9"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a9"
            android:background="@drawable/btn_image_button"

            />
        <ImageButton
            android:layout_below="@id/lvl_1_6"
            android:layout_toRightOf="@id/lvl_1_9"
            android:id="@+id/lvl_1_10"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a10"
            android:background="@drawable/btn_image_button"
            />
        <ImageButton
            android:layout_below="@id/lvl_1_7"
            android:layout_toRightOf="@id/lvl_1_10"
            android:id="@+id/lvl_1_11"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_margin="5dp"
            android:src="@drawable/a11"
            android:background="@drawable/btn_image_button"
            />
        
        
        
    </RelativeLayout>
</ScrollView>
</RelativeLayout>
